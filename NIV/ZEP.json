{
    "1": {
        "1": {
            "verse": "The word of the Lord that came to Zephaniah son of Cushi, the son of Gedaliah, the son of Amariah, the son of Hezekiah, during the reign of Josiah son of Amon king of Judah:",
            "headers": []
        },
        "2": {
            "verse": "“I will sweep away everything",
            "headers": []
        },
        "3": {
            "verse": "“I will sweep away both man and beast;",
            "headers": []
        },
        "4": {
            "verse": "“I will stretch out my hand against Judah",
            "headers": []
        },
        "5": {
            "verse": "those who bow down on the roofs",
            "headers": []
        },
        "6": {
            "verse": "those who turn back from following the Lord",
            "headers": []
        },
        "7": {
            "verse": "Be silent before the Sovereign Lord ,",
            "headers": []
        },
        "8": {
            "verse": "“On the day of the Lord ’s sacrifice",
            "headers": []
        },
        "9": {
            "verse": "On that day I will punish",
            "headers": []
        },
        "10": {
            "verse": "“On that day, ”",
            "headers": []
        },
        "11": {
            "verse": "Wail, you who live in the market district ;",
            "headers": []
        },
        "12": {
            "verse": "At that time I will search Jerusalem with lamps",
            "headers": []
        },
        "13": {
            "verse": "Their wealth will be plundered,",
            "headers": []
        },
        "14": {
            "verse": "The great day of the Lord is near —",
            "headers": []
        },
        "15": {
            "verse": "That day will be a day of wrath—",
            "headers": []
        },
        "16": {
            "verse": "a day of trumpet and battle cry",
            "headers": []
        },
        "17": {
            "verse": "“I will bring such distress on all people",
            "headers": []
        },
        "18": {
            "verse": "Neither their silver nor their gold",
            "headers": []
        }
    },
    "2": {
        "1": {
            "verse": "Gather together, gather yourselves together,",
            "headers": []
        },
        "2": {
            "verse": "before the decree takes effect",
            "headers": []
        },
        "3": {
            "verse": "Seek the Lord , all you humble of the land,",
            "headers": []
        },
        "4": {
            "verse": "Gaza will be abandoned",
            "headers": []
        },
        "5": {
            "verse": "Woe to you who live by the sea,",
            "headers": []
        },
        "6": {
            "verse": "The land by the sea will become pastures",
            "headers": []
        },
        "7": {
            "verse": "That land will belong",
            "headers": []
        },
        "8": {
            "verse": "“I have heard the insults of Moab",
            "headers": []
        },
        "9": {
            "verse": "Therefore, as surely as I live,”",
            "headers": []
        },
        "10": {
            "verse": "This is what they will get in return for their pride,",
            "headers": []
        },
        "11": {
            "verse": "The Lord will be awesome to them",
            "headers": []
        },
        "12": {
            "verse": "“You Cushites, too,",
            "headers": []
        },
        "13": {
            "verse": "He will stretch out his hand against the north",
            "headers": []
        },
        "14": {
            "verse": "Flocks and herds will lie down there,",
            "headers": []
        },
        "15": {
            "verse": "This is the city of revelry",
            "headers": []
        }
    },
    "3": {
        "1": {
            "verse": "Woe to the city of oppressors,",
            "headers": []
        },
        "2": {
            "verse": "She obeys no one,",
            "headers": []
        },
        "3": {
            "verse": "Her officials within her",
            "headers": []
        },
        "4": {
            "verse": "Her prophets are unprincipled;",
            "headers": []
        },
        "5": {
            "verse": "The Lord within her is righteous;",
            "headers": []
        },
        "6": {
            "verse": "“I have destroyed nations;",
            "headers": []
        },
        "7": {
            "verse": "Of Jerusalem I thought,",
            "headers": []
        },
        "8": {
            "verse": "Therefore wait for me,”",
            "headers": []
        },
        "9": {
            "verse": "“Then I will purify the lips of the peoples,",
            "headers": []
        },
        "10": {
            "verse": "From beyond the rivers of Cush",
            "headers": []
        },
        "11": {
            "verse": "On that day you, Jerusalem, will not be put to shame",
            "headers": []
        },
        "12": {
            "verse": "But I will leave within you",
            "headers": []
        },
        "13": {
            "verse": "They will do no wrong;",
            "headers": []
        },
        "14": {
            "verse": "Sing, Daughter Zion;",
            "headers": []
        },
        "15": {
            "verse": "The Lord has taken away your punishment,",
            "headers": []
        },
        "16": {
            "verse": "On that day",
            "headers": []
        },
        "17": {
            "verse": "The Lord your God is with you,",
            "headers": []
        },
        "18": {
            "verse": "“I will remove from you",
            "headers": []
        },
        "19": {
            "verse": "At that time I will deal",
            "headers": []
        },
        "20": {
            "verse": "At that time I will gather you;",
            "headers": []
        }
    }
}