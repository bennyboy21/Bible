{
    "1": {
        "1": {
            "verse": "The word of the Lord that came to Joel son of Pethuel.",
            "headers": []
        },
        "2": {
            "verse": "Hear this, you elders;",
            "headers": []
        },
        "3": {
            "verse": "Tell it to your children,",
            "headers": []
        },
        "4": {
            "verse": "What the locust swarm has left",
            "headers": []
        },
        "5": {
            "verse": "Wake up, you drunkards, and weep!",
            "headers": []
        },
        "6": {
            "verse": "A nation has invaded my land,",
            "headers": []
        },
        "7": {
            "verse": "It has laid waste my vines",
            "headers": []
        },
        "8": {
            "verse": "Mourn like a virgin in sackcloth",
            "headers": []
        },
        "9": {
            "verse": "Grain offerings and drink offerings",
            "headers": []
        },
        "10": {
            "verse": "The fields are ruined,",
            "headers": []
        },
        "11": {
            "verse": "Despair, you farmers,",
            "headers": []
        },
        "12": {
            "verse": "The vine is dried up",
            "headers": []
        },
        "13": {
            "verse": "Put on sackcloth, you priests, and mourn;",
            "headers": []
        },
        "14": {
            "verse": "Declare a holy fast;",
            "headers": []
        },
        "15": {
            "verse": "Alas for that day!",
            "headers": []
        },
        "16": {
            "verse": "Has not the food been cut off",
            "headers": []
        },
        "17": {
            "verse": "The seeds are shriveled",
            "headers": []
        },
        "18": {
            "verse": "How the cattle moan!",
            "headers": []
        },
        "19": {
            "verse": "To you, Lord , I call,",
            "headers": []
        },
        "20": {
            "verse": "Even the wild animals pant for you;",
            "headers": []
        }
    },
    "2": {
        "1": {
            "verse": "Blow the trumpet in Zion;",
            "headers": []
        },
        "2": {
            "verse": "a day of darkness and gloom,",
            "headers": []
        },
        "3": {
            "verse": "Before them fire devours,",
            "headers": []
        },
        "4": {
            "verse": "They have the appearance of horses;",
            "headers": []
        },
        "5": {
            "verse": "With a noise like that of chariots",
            "headers": []
        },
        "6": {
            "verse": "At the sight of them, nations are in anguish;",
            "headers": []
        },
        "7": {
            "verse": "They charge like warriors;",
            "headers": []
        },
        "8": {
            "verse": "They do not jostle each other;",
            "headers": []
        },
        "9": {
            "verse": "They rush upon the city;",
            "headers": []
        },
        "10": {
            "verse": "Before them the earth shakes,",
            "headers": []
        },
        "11": {
            "verse": "The Lord thunders",
            "headers": []
        },
        "12": {
            "verse": "“Even now,” declares the Lord ,",
            "headers": []
        },
        "13": {
            "verse": "Rend your heart",
            "headers": []
        },
        "14": {
            "verse": "Who knows? He may turn and relent",
            "headers": []
        },
        "15": {
            "verse": "Blow the trumpet in Zion,",
            "headers": []
        },
        "16": {
            "verse": "Gather the people,",
            "headers": []
        },
        "17": {
            "verse": "Let the priests, who minister before the Lord ,",
            "headers": []
        },
        "18": {
            "verse": "Then the Lord was jealous for his land",
            "headers": []
        },
        "19": {
            "verse": "The Lord replied to them:",
            "headers": []
        },
        "20": {
            "verse": "“I will drive the northern horde far from you,",
            "headers": []
        },
        "21": {
            "verse": "Do not be afraid, land of Judah;",
            "headers": []
        },
        "22": {
            "verse": "Do not be afraid, you wild animals,",
            "headers": []
        },
        "23": {
            "verse": "Be glad, people of Zion,",
            "headers": []
        },
        "24": {
            "verse": "The threshing floors will be filled with grain;",
            "headers": []
        },
        "25": {
            "verse": "“I will repay you for the years the locusts have eaten —",
            "headers": []
        },
        "26": {
            "verse": "You will have plenty to eat, until you are full,",
            "headers": []
        },
        "27": {
            "verse": "Then you will know that I am in Israel,",
            "headers": []
        },
        "28": {
            "verse": "“And afterward,",
            "headers": []
        },
        "29": {
            "verse": "Even on my servants, both men and women,",
            "headers": []
        },
        "30": {
            "verse": "I will show wonders in the heavens",
            "headers": []
        },
        "31": {
            "verse": "The sun will be turned to darkness",
            "headers": []
        },
        "32": {
            "verse": "And everyone who calls",
            "headers": []
        }
    },
    "3": {
        "1": {
            "verse": "“In those days and at that time,",
            "headers": []
        },
        "2": {
            "verse": "I will gather all nations",
            "headers": []
        },
        "3": {
            "verse": "They cast lots for my people",
            "headers": []
        },
        "4": {
            "verse": "“Now what have you against me, Tyre and Sidon and all you regions of Philistia? Are you repaying me for something I have done? If you are paying me back, I will swiftly and speedily return on your own heads what you have done.",
            "headers": []
        },
        "5": {
            "verse": "For you took my silver and my gold and carried off my finest treasures to your temples.",
            "headers": []
        },
        "6": {
            "verse": "You sold the people of Judah and Jerusalem to the Greeks, that you might send them far from their homeland.",
            "headers": []
        },
        "7": {
            "verse": "“See, I am going to rouse them out of the places to which you sold them, and I will return on your own heads what you have done.",
            "headers": []
        },
        "8": {
            "verse": "I will sell your sons and daughters to the people of Judah, and they will sell them to the Sabeans, a nation far away.” The Lord has spoken.",
            "headers": []
        },
        "9": {
            "verse": "Proclaim this among the nations:",
            "headers": []
        },
        "10": {
            "verse": "Beat your plowshares into swords",
            "headers": []
        },
        "11": {
            "verse": "Come quickly, all you nations from every side,",
            "headers": []
        },
        "12": {
            "verse": "“Let the nations be roused;",
            "headers": []
        },
        "13": {
            "verse": "Swing the sickle,",
            "headers": []
        },
        "14": {
            "verse": "Multitudes, multitudes",
            "headers": []
        },
        "15": {
            "verse": "The sun and moon will be darkened,",
            "headers": []
        },
        "16": {
            "verse": "The Lord will roar from Zion",
            "headers": []
        },
        "17": {
            "verse": "“Then you will know that I, the Lord your God,",
            "headers": []
        },
        "18": {
            "verse": "“In that day the mountains will drip new wine,",
            "headers": []
        },
        "19": {
            "verse": "But Egypt will be desolate,",
            "headers": []
        },
        "20": {
            "verse": "Judah will be inhabited forever",
            "headers": []
        },
        "21": {
            "verse": "Shall I leave their innocent blood unavenged?",
            "headers": []
        }
    }
}